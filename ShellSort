// Example program
#include <iostream>
#include <string>

using namespace std;

void shellSort(int[]);


int main()
{
    int myArray[] = {2, 1, 5, 3, 4, 92, 76, 54};
    //int myArraySize = sizeof(myArray)/sizeof(myArray[0]); //Never used
    for(int ele: myArray)
    {
     cout << ele;   
    }
    
    cout << "\n";
    
    shellSort(myArray); 
    
    for(int ele: myArray)
    {
     cout << ele;   
    }
}    
    
void shellSort(int a[])
{    
int i, j, k, h, v; 


 int aSize = sizeof(a)/sizeof(a[0]);
        int n = aSize;

        //the cols array contains "optimal" column intervals
        int cols[] = { 1391376, 463792, 198768, 86961, 33936,
                13776, 4592, 1968, 861, 336, 112, 48,
                21, 7, 3, 1
            };

        for (k=0; k<16; k++) //vary column size
        {
            h = cols[k];
            for (i=h; i<n; i++)
            {
                v=a[i];
                j =i;
                while (j>=h && a[j-h]>v)
                {
                    a[j]=a[j-h];
                    j=j-h;
                }
                a[j]=v;
            }//end for loop in h

        }//end for loop in k

    }//end shellsort()
